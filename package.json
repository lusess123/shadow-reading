{
  "name": "shadow-reading",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev:web": "pnpm --filter shadow-reading-web dev",
    "dev:api": "pnpm --filter shadow-reading-api dev",
    "build:web": "pnpm --filter shadow-reading-web build",
    "convert-courses": "npx tsx scripts/convert-courses.mts",
    "upload-courses": "bash scripts/upload-courses.sh",
    "upload-courses:prod": "bash scripts/upload-courses.sh --prod",
    "upload-docs": "bash scripts/upload-docs.sh",
    "upload-docs:prod": "bash scripts/upload-docs.sh --prod",
    "setup:local": "pnpm install && pnpm convert-courses && pnpm upload-courses && pnpm upload-docs"
  },
  "devDependencies": {
    "tsx": "latest"
  },
  "packageManager": "pnpm@9.0.0"
}
